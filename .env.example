# GitHub OAuth — two separate OAuth Apps recommended (github.com/settings/developers)
# Production app ("Chapa"): callback https://chapa.thecreativetoken.com/api/auth/callback
# Dev app ("Chapa Dev"):     callback http://localhost:3001/api/auth/callback
# Use the dev app credentials here; production credentials go in Vercel env vars.
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
NEXTAUTH_SECRET=
NEXT_PUBLIC_BASE_URL=http://localhost:3001

# Upstash Redis
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# PostHog (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Resend (optional — email notifications)
RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=
SUPPORT_FORWARD_EMAIL=

# GitHub personal access token (optional — used as fallback when no OAuth token available)
GITHUB_TOKEN=

# Badge verification
CHAPA_VERIFICATION_SECRET=   # HMAC secret for badge verification hash (required for /api/verify)

# Feature flags
COMING_SOON=                    # Set to "true" to redirect all traffic to /coming-soon (optional)
NEXT_PUBLIC_STUDIO_ENABLED=     # Set to "true" to enable Creator Studio (optional, disabled by default)
NEXT_PUBLIC_SCORING_PAGE_ENABLED=  # Set to "true" to enable the scoring methodology page (optional)
NEXT_PUBLIC_EXPERIMENTS_ENABLED=   # Set to "true" to enable /experiments pages (optional)

# Admin
ADMIN_HANDLES=                     # Comma-separated GitHub handles allowed to access /admin (optional)
ADMIN_SECRET=                      # Bearer token for /api/admin/stats endpoint (optional)

# Vercel Cron (auto-injected by Vercel on Pro plan — set locally for testing)
CRON_SECRET=

# Vercel environment (auto-injected by Vercel — do not set locally)
# VERCEL_ENV=

# Bundle analyzer (dev-only)
# ANALYZE=true                     # Set to "true" to enable @next/bundle-analyzer in next.config.ts

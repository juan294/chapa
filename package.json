{
  "name": "chapa",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "dev": "pnpm --filter @chapa/web dev",
    "build": "pnpm --filter @chapa/web build",
    "start": "pnpm --filter @chapa/web start",
    "lint": "pnpm --filter @chapa/web lint",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "vitest": "^3.0.5",
    "@vitest/coverage-v8": "^3.0.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "sharp", "unrs-resolver"]
  }
}
